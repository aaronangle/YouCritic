{{#each obj}}
<br>
<h2>{{@key}} Movies</h2>
      <div class="row">
        <div class="col-1 m-auto slide-left">
          <a class="arrow"><i class="fas fa-angle-left left-arrow"></i></a>
        </div>
        <div class="col-10 carousel-row-box align-items-center" id="{{@index}}">
          <div class="carousel dragscroll" id="slide-row-{{@index}}">
            <div class="carousel-row">

              {{#each results}}
              <div class="carousel-tile" data-id="{{id}}" id="movie-{{id}}">
                <img data-id="{{id}}" src="https://image.tmdb.org/t/p/w500/{{poster_path}}" alt="movie image" class="carousel-image"> 
                <div>{{title}}<br>
                  {{niceDate release_date}}
                </div>
              </div>
              {{/each}}

            </div>
          </div>
        </div>
        <div class="col-1 m-auto slide-right">
          <a class="arrow"><i class="fas fa-angle-right right-arrow"></i></a>
        </div>
      </div>
      <br>
      <hr>
{{/each}}