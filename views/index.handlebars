{{#each obj}}
<br>
<h2>{{#if trending}}trending{{/if}}</h2>
      <div class="row">
        <div class="col-1 m-auto" id="slide-left">
          <a class="arrow"><i class="fas fa-angle-left"></i></a>
        </div>
        <div class="col-10 carousel-row-box align-items-center" id="carousel-row-container-1">
          <div class="carousel dragscroll" id="slide-row-1">
            <div class="carousel-row">

              {{#each results}}
              <div class="carousel-tile" data-id="{{id}}" id="movie-{{id}}">
                <img src="https://image.tmdb.org/t/p/w500/{{poster_path}}" alt="movie image" class="carousel-image">
                <div>{{title}}<br>
                  {{release_date}}
                </div>
              </div>
              {{/each}}

            </div>
          </div>
        </div>
        <div class="col-1 m-auto" id="slide-right">
          <a class="arrow"><i class="fas fa-angle-right"></i></a>
        </div>
      </div>
{{/each}}